# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/invoice_db
SQLALCHEMY_DATABASE_URI=postgresql://username:password@localhost:5432/invoice_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-flask-key-change-this-in-production

# File Upload Configuration
MAX_CONTENT_LENGTH=10485760  # 10MB
UPLOAD_FOLDER=/app/uploads
EXPORT_FOLDER=/app/exports
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png

# OCR Configuration
OCR_CONFIDENCE_THRESHOLD=0.7
OCR_TIMEOUT=30
OCR_LANGUAGE=en

# Rate Limiting
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1
DEFAULT_RATE_LIMIT=100 per hour
API_RATE_LIMIT=1000 per hour

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=your-sentry-dsn-here

# Security
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True

# Business Configuration
DATA_RETENTION_DAYS=2555  # 7 years for compliance
BACKUP_SCHEDULE=daily
AUDIT_LOG_RETENTION_DAYS=2555

# Performance Configuration
CELERY_WORKER_CONCURRENCY=4
CACHE_TTL=3600
IMAGE_PROCESSING_TIMEOUT=60

# Multi-tenant Configuration
ENABLE_MULTI_TENANT=True
DEFAULT_TENANT=default

# Monitoring
HEALTH_CHECK_INTERVAL=60
METRICS_ENABLED=True
PERFORMANCE_MONITORING=True